@model ServiceSliderVM
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" placeholder="Enter Title">
        <span asp-validation-for="Title" style="color:red"> </span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" placeholder="Enter Description">
        <span asp-validation-for="Description" style="color:red"> </span>
    </div>
    <div class="form-group">
        <label for="ImgFile">ImgFile</label>
        <input asp-for="ImgFile" placeholder="Choose ImgFile">
        <span asp-validation-for="ImgFile" style="color:red"> </span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
